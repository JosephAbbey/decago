{
    "name": "decago-root",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "test": "turbo run test",
        "dev": "turbo run dev --parallel",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "eslint-config-custom": "*",
        "lerna": "^5.2.0",
        "lerna-changelog": "^2.2.0",
        "prettier": "latest",
        "turbo": "^1.3.4",
        "typescript": "^4.7.4"
    },
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=14.0.0"
    },
    "packageManager": "yarn@1.22.18",
    "changelog": {
        "labels": {
            "feature": "New Feature",
            "bug": "Bug Fix"
        }
    }
}
